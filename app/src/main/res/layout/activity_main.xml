<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.joyli.fooddecisionapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here are the available Food Categories"
                android:textSize="12sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:text = "#1 -> Korean Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#2 -> Japanese Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#3 -> Indian Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#4 -> Chinese Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#5 -> Italian Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#6 -> Thai Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#7 -> Vietnamese Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#8 -> Fast Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#9 -> Cafe"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#10 -> Buffet"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#11 -> Dessert"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#12 -> Greek Food"
                android:textSize="12sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Press button to randomly choose a food category"
                android:layout_marginTop="20dp"
                android:textSize="12sp" />

            <Button
                android:text="Press to Food"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="116dp"
                android:layout_marginStart="116dp"
                android:layout_marginTop="20dp"
                android:onClick="clickMeClick"
                android:id="@+id/pressMe"
                android:textColorLink="#ffffff" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selected_position_text"
                android:layout_marginTop="20dp"
                android:textSize="12sp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:id="@+id/mainImage"
                android:onClick="clickForMap"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/foodName"
                android:layout_marginTop="20dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/mainImage"
                />

                <ImageView
                    android:id="@+id/rating"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/location"
                    android:layout_toRightOf="@+id/mainImage" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/foodName"
                    android:layout_toRightOf="@+id/mainImage"
                    android:textSize="12sp"
                    android:linksClickable="true"
                    android:clickable="true"
                    android:id="@+id/location"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/rating"
                    android:layout_toRightOf="@+id/mainImage"
                    android:textSize="12sp"
                    android:id="@+id/reviews"/>

                <ImageView
                    android:id="@+id/logo"
                    android:onClick="clickOnFirstRestaurantLogo"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rating"
                    android:layout_marginLeft="150dp"
                    android:layout_toRightOf="@+id/mainImage" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:id="@+id/mainImage2"
                    android:onClick="clickForMap2"
                    android:layout_below="@id/mainImage"
                    />

                <ImageView
                    android:id="@+id/rating2"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/location2"
                    android:layout_toRightOf="@+id/mainImage2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/foodName2"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/mainImage2"
                    android:layout_below="@+id/mainImage"
                    />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/foodName2"
                    android:layout_toRightOf="@+id/mainImage2"
                    android:textSize="12sp"
                    android:id="@+id/location2"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/rating2"
                    android:layout_toRightOf="@+id/mainImage2"
                    android:textSize="12sp"
                    android:id="@+id/reviews2"/>

                <ImageView
                    android:id="@+id/logo2"
                    android:onClick="clickOnSecondRestaurantLogo"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rating2"
                    android:layout_marginLeft="150dp"
                    android:layout_toRightOf="@+id/mainImage2" />


                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:id="@+id/mainImage3"
                    android:onClick="clickForMap3"
                    android:layout_below="@id/mainImage2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/foodName3"
                    android:layout_marginTop="20dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/mainImage3"
                    android:layout_below="@+id/mainImage2"

                    />

                <ImageView
                    android:id="@+id/rating3"
                    android:layout_width="300dp"
                    android:layout_height="25dp"
                    android:layout_below="@+id/location3"
                    android:layout_toRightOf="@+id/mainImage3" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/foodName3"
                    android:layout_toRightOf="@+id/mainImage3"
                    android:textSize="12sp"
                    android:id="@+id/location3"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/rating3"
                    android:layout_toRightOf="@+id/mainImage3"
                    android:textSize="12sp"
                    android:id="@+id/reviews3"/>

                <ImageView
                    android:id="@+id/logo3"
                    android:onClick="clicksOnThirdRestaurantLogo"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/rating3"
                    android:layout_marginLeft="150dp"
                    android:layout_toRightOf="@+id/mainImage3" />

                <Button
                    android:id="@+id/go"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_below="@+id/reviews3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="25dp"
                    android:onClick="goClick"
                    android:text="GO"
                    android:visibility="invisible" />

                <ProgressBar
                    android:id="@+id/progressBar2"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_alignTop="@+id/foodName"
                    android:layout_centerHorizontal="true" />

                <ProgressBar
                    android:id="@+id/progressBar3"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_above="@+id/reviews2"
                    android:layout_alignStart="@+id/progressBar2" />

                <ProgressBar
                    android:id="@+id/progressBar4"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:layout_below="@+id/foodName3"
                    android:layout_alignStart="@+id/progressBar3" />


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

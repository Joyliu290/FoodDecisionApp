<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.example.joyli.fooddecisionapp.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Here are the available food categories"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:text = "#1 -> Korean Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#2 -> Japanese Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#3 -> Western Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#4 -> Chinese Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#5 -> Italian Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#6 -> Thai Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#7 -> Vietnamese Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#8 -> Fast Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#9 -> Cafe"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#10 -> Buffet"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#11 -> Dessert"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity = "left"
                android:layout_marginTop="10dp"
                android:text = "#12 -> Greek Food"
                android:textSize="20sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text = "Press button to randomly choose a food category"
                android:textSize="20sp" />

            <Button
                android:text="Press to Food"
                android:layout_width="146dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="116dp"
                android:layout_marginStart="116dp"
                android:onClick="clickMeClick"
                android:id="@+id/pressMe"
                android:textColorLink="#ffffff" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/selected_position_text"
                android:textSize="20sp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:id="@+id/txtLabel"
                android:layout_marginTop="20dp"
                android:textSize = "20sp"
                android:text = "You are now at"
                android:layout_gravity="center_horizontal"
                />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtCoordinates"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:text=""
                android:layout_gravity="center_horizontal"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/btnGetCoordinates"
                android:text="Get Coordinates"
                />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:id="@+id/btnTrackLocation"
                android:text="Start location updates"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical = "true"
                     />


            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/mainImage"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/foodName"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/mainImage"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@+id/foodName"
                android:layout_toRightOf="@+id/mainImage"
                android:textSize="20sp"
                android:id="@+id/rating"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading2"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical = "true"
                   />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/mainImage2"
                    android:layout_below="@id/mainImage"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/foodName2"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/mainImage2"
                    android:layout_below="@+id/mainImage"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/foodName2"
                    android:layout_toRightOf="@+id/mainImage2"
                    android:textSize="20sp"
                    android:id="@+id/rating2"/>

                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/loading3"
                    android:visibility="invisible"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical = "true"
                    />

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:id="@+id/mainImage3"
                    android:layout_below="@id/mainImage2"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/foodName3"
                    android:layout_marginTop="20dp"
                    android:textSize="20sp"
                    android:layout_toRightOf="@+id/mainImage3"
                    android:layout_below="@+id/mainImage2"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_below="@+id/foodName3"
                    android:layout_toRightOf="@+id/mainImage3"
                    android:textSize="20sp"
                    android:id="@+id/rating3"/>


            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
